# .env.example — Copy to .env and fill in values

# ─── Core ──────────────────────────────────────────────────────────────────
NODE_ENV=development
LOG_LEVEL=info

# ─── Database ──────────────────────────────────────────────────────────────
MONGODB_URI=mongodb://localhost:27017/serenemind
REDIS_URL=redis://localhost:6379

# ─── Authentication ────────────────────────────────────────────────────────
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_256_bit_random_secret_here
JWT_EXPIRE=7d
BCRYPT_ROUNDS=12

# ─── Encryption ────────────────────────────────────────────────────────────
# Generate: python3 -c "import os; print(os.urandom(32).hex())"
AES_SECRET=your_64_char_hex_key_here

# ─── AI APIs ───────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-placeholder
OPENAI_MODEL=gpt-4o-mini

# ─── Model Paths ───────────────────────────────────────────────────────────
EMOTION_MODEL_PATH=./ml/models/emotion_model
CRISIS_MODEL_PATH=./ml/models/crisis_model

# ─── Services ──────────────────────────────────────────────────────────────
AI_SERVICE_URL=http://ai-service:8000
AVATAR_SERVICE_URL=http://avatar-service:8001
AUTH_SERVICE_URL=http://auth-service:4000
ANALYTICS_SERVICE_URL=http://analytics-service:8002

# ─── Frontend ──────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:80
NEXT_PUBLIC_APP_NAME=SereneMind
NEXT_PUBLIC_SUPPORT_EMAIL=support@serenemind.app

# ─── Crisis Resources ──────────────────────────────────────────────────────
CRISIS_THRESHOLD=0.70         # Trigger modal above this
HIGH_RISK_THRESHOLD=0.50

# ─── Monitoring ────────────────────────────────────────────────────────────
RABBITMQ_URL=amqp://admin:changeme@rabbitmq:5672
SENTRY_DSN=https://your_sentry_dsn

# ─── Registry ──────────────────────────────────────────────────────────────
REGISTRY=ghcr.io/your-org
IMAGE_TAG=latest
